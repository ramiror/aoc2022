file=${1:-input.txt}
cat $file |\
  awk '/\[/,/^$/-1' |\
  sed 's/\(...\) /\1/g' |\
  sed 's/   /\[ \]/g' | tee cosoloco |\
  sed 's/\[//g;s/\]//g' > dibujin.tmp

cat $file |\
  awk '
    /^$/  {copy=1}
          {if (copy && NF>0) print}
  ' > instructions.tmp


python crane.py dibujin.tmp instructions.tmp

rm dibujin.tmp
rm instructions.tmp
